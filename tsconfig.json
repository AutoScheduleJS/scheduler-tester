{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ]
}
